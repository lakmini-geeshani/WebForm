<html>
<head>
	<title>Holiday </title>
	<link rel="stylesheet" type="text/css" href="form.css">
</head>
<body>
<div class="wrapp">
	<h1> Holiday </h1>
	<hr>
	<div class="form">
		<form action="#page">
			<font color="white">
			 <div class="text">
			 	Name <br>    
				<input type="text" name="Your Name" placeholder="Your Name" margin-right="100px"><br><br>
				Email<br>
				<input type="text" name="Email" placeholder="Email"><br><br>
				Phone Number<br>
				<input type="text" name="Phone Number" placeholder="Phone Number"><br><br>
			 </div><br><br>

			
	
			

			<div class="nights">
				Nights <br>
				<select>
					<option>1</option>
					<option>2</option>
					<option>3</option>
				</select>
			</div>	

			<table>
				<font color="white"></font>
				<tr>
					<th>
						<font color="white">
							Adults <br>
						<select>
							<option>1</option>
							<option>2</option>
							<option>3</option>
						</select>
						</font>
						
					</th>
					<th>
						<font color="white">
							Kids(<12) <br>
						<select>
							<option>0</option>
							<option>1</option>
							<option>2</option>
							<option>3</option>
						</select>
						</font>
					</th>
					<th>
						<font color="white">
							Baby(<2)<br>
						<select>
							<option>0</option>
							<option>1</option>
							<option>2</option>
							<option>3</option>
						</select>
						</font>
					</th>
				</tr>
			</table>

			<div class="destination">
				Destination <br>
				<select>
					<option="">Select</option>
					<option="Galle">Galle</option>
					<option="Colombo">Colombo</option>
					
				</select>
			</div>
			<div class="text_area">
				Message/Request <br>
				<textarea name="massages" >Text your massage here</textarea>
			</div>

			<div class="submit">
				<input type="submit" value=" SEND HOLIDAY REQUEST ">
				
		    </div>
		</font>
	</form>
	</div>
	
</div>

<div class="container">
	<div class="row">
		<div class="col-md-6">
			<p>test</p>
		</div>

	</div>
